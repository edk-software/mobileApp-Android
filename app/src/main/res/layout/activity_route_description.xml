<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_full_button"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:text="Podejmij wyzwanie"
        android:textColor="@color/white_on_black" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"

        android:background="@drawable/red_border_button"
        android:layout_marginTop="20dp"
        android:padding="8dp"

        android:text="Zmień trasę"
        android:textColor="@color/white_on_black" />

    <TextView
        android:id="@+id/descriptionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeButton"
        android:background="@drawable/red_underscore_button"
        android:paddingTop="20dp"
        android:text="Opis trasy"
        android:paddingBottom="3dp"
        android:textColor="@color/white_on_black"
        android:textSize="18sp" />


    <ScrollView
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/descriptionHeader">

        <WebView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkGray"
            android:textSize="17sp"
            android:lineSpacingMultiplier="1.3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/white_on_black" />
    </ScrollView>

</RelativeLayout>