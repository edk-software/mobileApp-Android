<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/edk_logo_large"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
        <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="7">
            <Button style="@style/ListButton"
                    android:layout_row="0" android:layout_column="0"
                    android:text="Stacja I"
                    android:id="@+id/btnStation1"/>
            <Button style="@style/ListButton"
                    android:layout_row="0" android:layout_column="1"
                    android:text="Stacja II"
                    android:id="@+id/btnStation2"/>
            <Button style="@style/ListButton"
                    android:layout_row="1" android:layout_column="0"
                    android:text="Stacja III"
                    android:id="@+id/btnStation3"/>
            <Button style="@style/ListButton"
                    android:layout_row="1" android:layout_column="1"
                    android:text="Stacja IV"
                    android:id="@+id/btnStation4"/>
            <Button style="@style/ListButton"
                    android:layout_row="2" android:layout_column="0"
                    android:text="Stacja V"
                    android:id="@+id/btnStation5"/>
            <Button style="@style/ListButton"
                    android:layout_row="2" android:layout_column="1"
                    android:text="Stacja VI"
                    android:id="@+id/btnStation6"/>
            <Button style="@style/ListButton"
                    android:layout_row="3" android:layout_column="0"
                    android:text="Stacja VII"
                    android:id="@+id/btnStation7"/>
            <Button style="@style/ListButton"
                    android:layout_row="3" android:layout_column="1"
                    android:text="Stacja VIII"
                    android:id="@+id/btnStation8"/>
            <Button style="@style/ListButton"
                    android:layout_row="4" android:layout_column="0"
                    android:text="Stacja IX"
                    android:id="@+id/btnStation9"/>
            <Button style="@style/ListButton"
                    android:layout_row="4" android:layout_column="1"
                    android:text="Stacja X"
                    android:id="@+id/btnStation10"/>
            <Button style="@style/ListButton"
                    android:layout_row="5" android:layout_column="0"
                    android:text="Stacja XI"
                    android:id="@+id/btnStation11"/>
            <Button style="@style/ListButton"
                    android:layout_row="5" android:layout_column="1"
                    android:text="Stacja XII"
                    android:id="@+id/btnStation12"/>
            <Button style="@style/ListButton"
                    android:layout_row="6" android:layout_column="0"
                    android:text="Stacja XIII"
                    android:id="@+id/btnStation13"/>
            <Button style="@style/ListButton"
                    android:layout_row="6" android:layout_column="1"
                    android:text="Stacja XIV"
                    android:id="@+id/btnStation14"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>

